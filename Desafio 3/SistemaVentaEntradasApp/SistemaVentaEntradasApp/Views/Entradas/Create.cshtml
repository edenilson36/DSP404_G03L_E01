@model SistemaVentaEntradasApp.Models.Entrada

@{
    ViewBag.Title = "Comprar Entradas";
}

<h2>Comprar Entradas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Campos ocultos para UsuarioID y ConciertoID -->
    @Html.HiddenFor(model => model.UsuarioID, new { Value = (int)Session["UsuarioID"] })
    @Html.HiddenFor(model => model.ConciertoID, new { Value = ViewBag.ConciertoID })

    <div class="form-group">
        <label for="LocalidadID">Localidad</label>
        @Html.DropDownListFor(model => model.LocalidadID, (SelectList)ViewBag.LocalidadID, "Selecciona una localidad", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Cantidad">Cantidad</label>
        @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control", type = "number", min = "1" })
    </div>

    <button type="submit" class="btn btn-primary">Comprar</button>
}

<p>
    @Html.ActionLink("Volver a Conciertos", "Index", "Conciertos")
</p>
