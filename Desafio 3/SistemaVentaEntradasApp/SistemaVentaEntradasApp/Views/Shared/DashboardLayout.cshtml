<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Dashboard</title>
 
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        body {
            background-color: #f8f9fa;
        }

        .navbar-custom {
            background-color: #343a40;
            color: #fff;
        }

            .navbar-custom .navbar-brand, .navbar-custom .nav-link {
                color: #f8f9fa;
            }

                .navbar-custom .nav-link:hover {
                    color: #adb5bd;
                }

        .container-dashboard {
            margin-top: 20px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
 
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">Turnover SA de CV</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("Historial", "Historico", "Entradas", null, new { @class = "nav-link" })</li>
    
                    <li class="nav-item">@Html.ActionLink("Cerrar Sesión", "Logout", "Cuenta", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

 
    <div class="container container-dashboard">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
