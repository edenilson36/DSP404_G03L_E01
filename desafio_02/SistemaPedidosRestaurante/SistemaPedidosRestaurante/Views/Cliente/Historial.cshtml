@{
    ViewBag.Title = "Historial de Compras";
}

<style>
 
    body {
        background-color: #F4F6F9; 
    }

    .pedido-card {
        background-color: #FFFFFF; 
        border: 1px solid #1976D2; 
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); 
    }

    h2 {
        text-align: center;
        color: #1976D2; 
        margin-bottom: 30px;
    }

    h3 {
        color: #1976D2; 
        margin-bottom: 10px;
    }

    .pedido-info {
        font-size: 18px;
        color: #424242; 
    }

        .pedido-info strong {
            color: #1976D2; 
        }

    .comentarios {
        color: #555;
        font-style: italic;
    }
</style>

<h2>Historial de Compras</h2>

@if (ViewBag.Pedidos != null)
{
    foreach (var pedido in ViewBag.Pedidos)
    {
        <div class="pedido-card">
            <h3>Pedido:</h3>
            <div class="pedido-info">
                <p><strong>Platos:</strong></p>
                <ul>
                    @foreach (var plato in pedido.Platos)
                    {
                        <li>@plato</li>
                    }
                </ul>
                <p><strong>Total:</strong> $@pedido.Total</p>
                <p><strong>Estado:</strong> @pedido.Estado</p>
                <p class="comentarios"><strong>Comentarios del empleado:</strong> @pedido.Comentarios</p>
            </div>
        </div>
    }
}
else
{
    <p>No tienes pedidos en tu historial.</p>
}
